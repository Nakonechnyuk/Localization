@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewBag.Title = "Home Page";
}

<h1>@Localizer["Header"]</h1>
<h3>@Localizer["Message"]</h3>
<p>@Localizer["FormatDate"]: @ViewBag.Date</p>
<p>@Localizer["Number"]: @ViewBag.NumberDouble</p>

<p>@Localizer["Volume"]: @ViewBag.Volume @Localizer["VolumeMeasurement"]</p>
<p>@Localizer["Weight"]: @ViewBag.Weight @Localizer["WeightMeasurement"]</p>